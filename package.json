{
  "name": "home-sync",
  "version": "0.0.0",
  "main": "electron.js",
  "displayName": "Home Sync",
  "scripts": {
    "dist:clean": "rimraf dist",
    "inst:clean": "rimraf inst",
    "ng": "ng",
    "build": "ng build --base-href ./",
    "start": "ng serve --no-hmr",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "ssr:HomeSync": "npm run dist:clean && ng build && node dist/HomeSync/server/server.mjs",
    "electron": "npm run inst:clean && ng build --base-href ./ && npx electron-builder"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.0",
    "@angular/cdk": "^20.1.0",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.0",
    "@auth0/angular-jwt": "^5.2.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "express": "^5.1.0",
    "notyf": "^3.10.0",
    "rxjs": "~7.8.0",
    "swiper": "^8.4.7",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.0",
    "@angular/cli": "^20.1.0",
    "@angular/compiler-cli": "^20.1.0",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  },
  "build": {
    "appId": "com.home.sync.application",
    "productName": "Home Sync",
    "directories": {
      "output": "inst"
    },
    "files": [
      "dist/",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
